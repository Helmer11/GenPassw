<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GenPass.UI.MainPage">

    <Grid>

        <!-- Contenido principal -->
        <CollectionView ItemsSource="{Binding credenciales}">
            <CollectionView.ItemTemplate>

                <DataTemplate>

                <VerticalStackLayout Padding="10">
                    <!-- Card -->
                        <Border
                                    Margin="10"
                                    Padding="15"
                                    BackgroundColor="White"
                                    Stroke="#E0E0E0"
                                    StrokeThickness="1"
                                    VerticalOptions="Start"
                                    HorizontalOptions="Fill">

                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12" />
                            </Border.StrokeShape>

                            <VerticalStackLayout Spacing="8">
                                <Label
                                        Text="{Binding NameSite}"
                                        FontSize="18"
                                        FontAttributes="Bold" />    

                                <Label
                                    Text="{Binding UserName}"
                                    FontSize="14"
                                    TextColor="Gray" />
                            </VerticalStackLayout>

                        </Border>

                </VerticalStackLayout>

                </DataTemplate>


                </CollectionView.ItemTemplate>

        </CollectionView>

        <!-- Botón flotante -->
        <Button
            Text="+"
            WidthRequest="56"
            HeightRequest="56"
            CornerRadius="28"
            BackgroundColor="#1976D2"
            TextColor="White"
            FontSize="24"
            HorizontalOptions="End"
            VerticalOptions="End"
            Margin="20,20,20,80"
            Shadow="5,5,10,0.5" />

    </Grid>

</ContentPage>
